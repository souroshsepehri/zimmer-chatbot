{
  "name": "persian-chatbot",
  "version": "1.0.0",
  "description": "Persian Chatbot with PM2 Process Management",
  "main": "main.py",
  "scripts": {
    "start": "pm2 start ecosystem.config.js --env production",
    "start:dev": "pm2 start ecosystem.config.js --env development",
    "stop": "pm2 stop all",
    "restart": "pm2 restart all",
    "reload": "pm2 reload all",
    "delete": "pm2 delete all",
    "status": "pm2 status",
    "logs": "pm2 logs",
    "logs:backend": "pm2 logs chatbot-backend",
    "logs:frontend": "pm2 logs chatbot-frontend",
    "monitor": "pm2 monit",
    "save": "pm2 save",
    "resurrect": "pm2 resurrect",
    "setup": "npm install -g pm2 && pm2 install pm2-logrotate",
    "install:pm2": "npm install -g pm2",
    "install:logrotate": "pm2 install pm2-logrotate",
    "health": "pm2 jlist | jq '.[] | select(.name | contains(\"chatbot\")) | {name, status, uptime}'",
    "backup": "pm2 save && cp ~/.pm2/dump.pm2 ./backups/",
    "update": "git pull && pm2 reload all",
    "debug": "python debug_chatbot.py",
    "debug:manager": "debug_manager.bat",
    "debug:interface": "start http://localhost:8000/api/debug/interface",
    "debug:logs": "pm2 logs --lines 50",
    "debug:status": "curl -s http://localhost:8000/api/debug/status | jq .",
    "debug:test": "curl -X POST \"http://localhost:8000/api/debug/test/response?message=سلام&chatbot_type=simple\" | jq .",
    "smart-agent": "start http://localhost:8000/api/smart-agent/interface",
    "smart-agent:test": "curl -X POST \"http://localhost:8000/api/smart-agent/chat\" -H \"Content-Type: application/json\" -d \"{\\\"message\\\": \\\"Hello, how are you?\\\", \\\"style\\\": \\\"casual\\\"}\" | jq .",
    "smart-agent:styles": "curl -s http://localhost:8000/api/smart-agent/styles | jq .",
    "smart-agent:status": "curl -s http://localhost:8000/api/smart-agent/status | jq .",
    "api-keys": "python setup_api_keys.py"
  },
  "keywords": [
    "chatbot",
    "persian",
    "fastapi",
    "nextjs",
    "pm2",
    "process-manager"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "pm2": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/chatbot2.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/chatbot2/issues"
  },
  "homepage": "https://github.com/your-username/chatbot2#readme"
}
